@{
    ViewData["Title"] = "Home Page";
}

@if (!User.Identity.IsAuthenticated)
{

    <div class="card card-cascade wider reverse">

        <div class="view view-cascade overlay">
            <div id="carouselExampleCaptions" class="carousel slide img-thumbnail" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
                </ol>

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/img/edificio01.jpg" class="card-img-top d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Los mejores inmuebles</h5>
                            <p>Contamos con la mejor empresa de inmuebles.</p>
                        </div>
                    </div>
                    <div class="carousel-item">

                        <img src="~/img/edificio02.jpg" class="card-img-top d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block text-dark">
                            <h5>Comerciamos inmuebles de todo tipo</h5>
                            <p>Al mejor precio del mercado.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/ubi.png" class="card-img-top d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block text-dark">
                            <h5>Nuestra ubicación</h5>
                            <p>Búscanos en Google Maps</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Anterior</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Siguiente</span>
                </a>
            </div>
        </div>

        <div class="card-body card-body-cascade text-center">

            <h4 class="card-title"><strong>Inmobiliaria</strong></h4>
            <h6 class="font-weight-bold indigo-text">Bienvenido</h6>
            <p class="card-text">
                La mejor inmobiliaria de San Luis-Capital, atendida por sus propios dueños, con los precios más accesibles para pobres.
            </p>

            <div>
                <a class="btn btn-outline-success" asp-area="" asp-controller="Usuarios" asp-action="Login">Acceder</a>
            </div>
            <hr />

            <!-- Linkedin -->
            <a class="px-2 fa-lg li-ic" href="#"><i class="fab fa-linkedin-in"></i></a>
            <!-- Twitter -->
            <a class="px-2 fa-lg tw-ic" href="#"><i class="fab fa-twitter"></i></a>
            <!-- Facebook -->
            <a class="px-2 fa-lg fb-ic" href="#"><i class="fab fa-facebook-f"></i></a>

        </div>


    </div>

}

