@model ProyectoInmobiliariaMVCPrimera_Entrega.Models.Pago

@{ ViewData["Title"] = "Create"; }

<h1>Create Pago</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>

                @if (ViewBag.pago == null)
                {
                    <input asp-for="Numero" class="form-control" value="1" readonly />
                }
                else
                {
                    int num = int.Parse(@ViewBag.Pago.Numero) + 1;
                    <input asp-for="Numero" class="form-control" value="@num" readonly />

                }

                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" value="" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label class="control-label">Propiedad</label>
                <input class="form-control" value="@ViewBag.Alquiler.inmueble.Direccion" readonly />
                <input asp-for="AlquilerId" class="form-control" type="hidden" value="@ViewBag.Alquiler.AlquilerId" />
            </div>

            <div class="form-group">

                <label class="control-label">Inquilino</label>
                <input class="form-control" value="@ViewBag.Inquilino.Nombre" readonly />
            </div>


            <div class="form-group">
                <input type="submit" value="Pagar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>